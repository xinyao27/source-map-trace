{
  "compilerOptions": {
    "sourceMap": false,
    "declaration": true,
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": false,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": false,
    "removeComments": true,
    "lib": ["ESNext"],
    "types": ["node", "jest"]
  },
  "include": ["src", "global.d.ts"],
  "exclude": ["**/__tests__"]
}
